{% extends '_layouts/base.njk' %}
{% block page_title %} Queen Albums {% endblock %}
{% block content %}

<div class="container">
  <div class="carousel">
    <div class="carousel-inner">
      {% for discography in data.discography %}
      {% if loop.first %}
      <div class="carousel-item active">
        <img class="d-block w-100 img-fluid" src="img/discs/{{discography.image}}" alt="Image-responsive">
          <h5>{{ discography.title }}
          <p> {{discography.year }}
      </div>

      {% else %}
      <div class="carousel-item active">
        <img class="d-blog w-100 img-fluid" src="img/queen-photos/discs/{{discography.image}}" alt="Image-responsive">
        <h5> {{discography.title }}
        <p> {{ discography.year }}
      </div>
    </div>

    {% endif %}
    {% endfor %}
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>


{% endblock %}
